{
  "name": "twitch-app",
  "version": "1.0.0",
  "description": "Twitch App from FCC",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "start": "NODE_ENV=development node -- src/backend/",
    "server": "NODE_ENV=test nodemon --exec node -- src/backend/",
    "db": "mongod --dbpath data/db",
    "test:back": "mocha test/backend --recursive --watch",
    "test:front": "mocha test/frontend --compilers js:babel-core/register --recursive --watch",
    "lint": "eslint src/",
    "build:webpack": "NODE_ENV=production webpack --progress --colors --config webpack.config.js",
    "build": "npm run clean && npm run build:webpack",
    "deploy": "git push heroku master"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.13.3",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.1",
    "redux": "^3.0.5"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "babel-core": "^6.3.17",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.1",
    "chai-shallow-deep-equal": "^1.3.0",
    "css-loader": "^0.23.0",
    "eslint": "^1.10.3",
    "eslint-config-google": "^0.3.0",
    "eslint-plugin-react": "^3.11.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^1.7.0",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-mocha": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.6",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.0.0",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.1",
    "sass-loader": "^3.1.2",
    "skin-deep": "^0.13.1",
    "style-loader": "^0.13.0",
    "supertest": "^1.1.0",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0"
  }
}
