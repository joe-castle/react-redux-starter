{
  "name": "react-redux-starter",
  "version": "1.0.0",
  "description": "React and Redux Starter Project",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf src/public",
    "start": "node src/server.js",
    "test": "mocha --compilers js:babel-core/register --recursive --watch",
    "build:webpack": "NODE_ENV=production webpack --progress --colors --config webpack/webpack.config.js",
    "build": "npm run clean && npm run build:webpack",
    "deploy:heroku": "git push heroku master",
    "deploy:github": "git push origin master",
    "deploy": "npm run deploy:github && npm run deploy:heroku"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.13.4",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.0",
    "redux": "^3.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.6.5",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.9.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.1",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.5",
    "sass-loader": "^3.1.2",
    "skin-deep": "^0.14.0",
    "style-loader": "^0.13.0",
    "supertest": "^1.2.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
