{
  "name": "react-redux-starter",
  "version": "1.0.0",
  "description": "React and Redux Starter Project",
  "main": "index.js",
  "scripts": {
    "start": "node build/server.js",
    "serv": "nodemon --exec babel-node src/server.js",
    "dev": "node webpack.devserver.js",
    "clean": "rimraf build/ && rimraf dumb.rdb",
    "lint": "eslint --format 'node_modules/eslint-friendly-formatter' src test",
    "test": "NODE_ENV=test mocha --compilers js:babel-register",
    "test:watch": "npm test -- --watch",
    "check:src": "npm run lint && npm run test",
    "build:commonjs": "babel src --out-dir build",
    "build:min": "webpack --progress --colors --config webpack/webpack.config.js",
    "build": "NODE_ENV=production npm run build:commonjs && npm run build:min",
    "predeploy": "npm run clean && npm run check:src && npm run build"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.4.0",
    "classnames": "^2.2.5",
    "express": "^4.13.4",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redis": "^2.6.1",
    "redux": "^3.5.2",
    "shortid": "^2.2.6"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.0",
    "eslint": "^3.11.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-friendly-formatter": "^2.0.5",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-react": "^6.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "mocha": "^3.2.0",
    "normalize.css": "^5.0.0",
    "postcss-loader": "^1.1.1",
    "react-addons-test-utils": "^15.1.0",
    "rupture": "^0.6.1",
    "skin-deep": "^0.16.0",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.1.1",
    "supertest": "^2.0.1",
    "typographic": "^2.9.3",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
