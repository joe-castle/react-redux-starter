.App
  margin 100px auto
  max-width 600px

  main
    box-shadow 2px 2px 5px 2px rgba(0,0,0,.1), 
    -2px -2px 5px 2px rgba(0,0,0,.1),
    2px -2px 5px 2px rgba(0,0,0,.1),
    -2px 2px 5px 2px rgba(0,0,0,.1)

    > div 
      margin 0 auto
      padding 10px
      width 80%

    h2
      color rgba(85.1%, 0%, 0%, 0.859)
      font-size 75px
      font-weight 300
      margin 0
      padding 15px
      text-align center
      